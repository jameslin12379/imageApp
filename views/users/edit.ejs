<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="../../../../favicon.ico">

    <title>Edit profile</title>

    <!-- Bootstrap core CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <!-- Custom styles for this template -->
    <!--<link href="https://getbootstrap.com/docs/4.1/examples/sign-in/signin.css" rel="stylesheet">-->
    <link href="https://getbootstrap.com/docs/4.1/examples/cover/cover.css" rel="stylesheet">
    <link href="/stylesheets/style.css" rel="stylesheet">
</head>

<body class="text-center">

<div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="masthead mb-auto">
        <div class="inner">
            <a href="/"><h3 class="masthead-brand">Imagz</h3></a>
            <nav class="nav nav-masthead justify-content-center">
                <a class="nav-link" href="/topics">Explore</a>
                <a class="nav-link" href="/users/<%= req.user.id %>"><%= req.user.username %></a>
                <a class="nav-link" href="/images/new">Upload</a>
                <a class="nav-link" href="/logout">Log out</a>
            </nav>
        </div>
    </header>

    <main role="main" class="inner cover">
        <h1 class="h3 mb-3 font-weight-normal">Edit profile</h1>
        <form action="/users/<%= req.params.id %>?_method=PUT" method="post" class="form-signin">
            <% if (errors.length > 0) { %>
            <% for(var i = 0; i < errors.length; i++) { %>
            <div class="alert alert-danger" role="alert">
                <%= errors[i].msg %>
            </div>
            <% } %>
            <% } %>
            <input type="email" class="form-control mb-3" name="email" value="<%if (inputs.length > 0) { %><%= inputs[0].email %><% }else{ %><%= results.email %><% } %>" required autofocus>
            <input type="password" class="form-control mb-3" name="password" required>
            <input type="text" class="form-control mb-3" name="username" value="<%if (inputs.length > 0) { %><%= inputs[0].username %><% }else{ %><%= results.username %><% } %>" required>
            <textarea class="form-control mb-3" name="description" rows="5" cols="5"><%if (inputs.length > 0) { %><%= inputs[0].description %><% }else{ %><%= results.description %><% } %></textarea>
            <button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        </form>
    </main>

    <footer class="mastfoot mt-auto">
        <div class="inner">
            <!--<p>Cover template for <a href="https://getbootstrap.com/">Bootstrap</a>, by <a href="https://twitter.com/mdo">@mdo</a>.</p>-->
            <p>&copy; 2018 Company, Inc. &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p>
        </div>
    </footer>
</div>


<!-- Optional JavaScript -->
<!-- jQuery first, then Popper.js, then Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
</body>
</html>



